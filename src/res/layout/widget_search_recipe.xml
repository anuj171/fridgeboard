<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">
    
     <ImageView android:id="@+id/imgIconSearch"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY" 
        android:layout_marginBottom="5dp" />
    <LinearLayout android:id="@+id/recipeMidLayoutSearch"
	    android:orientation="vertical" 
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:layout_weight="1"
	    android:gravity="left"
	   	android:paddingRight="5dp"
	    android:paddingLeft="5dp"
	    >

		<TextView android:id="@+id/txtTitleSearch"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="@string/recipe_name"
		    android:textColor="#000000"
		    android:textSize="18sp"
		    android:textStyle="bold"/>
		
		<TextView android:id="@+id/txtDescSearch"
		    android:layout_width="match_parent"
		    android:layout_height="16sp"
		    android:text="@string/recipe_desc"
		    android:textColor="#000000"
		    android:textSize="12sp"
		    android:textStyle="italic"/>
		<TextView android:id="@+id/txtNutritionSearch"
		    android:layout_width="match_parent"
		    android:layout_height="16sp"
		    android:text="Nutrition"
		    android:textColor="#000000"
		    android:textSize="12sp"
		    android:textStyle="normal"/>
		<TextView android:id="@+id/txtDurationSearch"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="Time: 15 Min"
		    android:textColor="#000000"
		    android:textSize="12sp"
		    android:textStyle="bold"
		    />
	</LinearLayout>
</LinearLayout>
